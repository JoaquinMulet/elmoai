<section class="contact-section" id="contact">
    <div class="container">
        <div class="contact-content">
            <p class="text">
                Te invitamos a descubrir c√≥mo El Moai puede transformar tu negocio
            </p>
            <button class="chat-button" id="chat-prompt-btn">
                Hablar con El Moai
            </button>
        </div>
    </div>
</section>

<style>
    .contact-section {
        min-height: 100vh;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding: 2rem;
        padding-top: 30vh;
        margin-top: 0;
    }

    .container {
        max-width: 800px;
        width: 100%;
        margin: 0 auto;
        padding: 2rem;
    }

    .contact-content {
        max-width: 800px;
        width: 90%;
        margin: 0 auto;
        text-align: center;
    }

    .text {
        font-size: clamp(2.5rem, 4vw, 3.5rem);
        font-weight: 400;
        line-height: 1.2;
        color: #1a1a1a;
        margin: 0;
        margin-bottom: 6rem;
    }

    .chat-button {
        font-family: 'Satoshi', system-ui, sans-serif;
        font-size: 1.8rem;
        font-weight: 400;
        letter-spacing: 0.1em;
        color: #1a1a1a;
        text-decoration: none;
        padding: 0.4rem 0;
        position: relative;
        background: none;
        border: none;
        cursor: pointer;
    }

    .chat-button::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 1px;
        bottom: 0;
        left: 0;
        background-color: currentColor;
        transform: scaleX(0);
        transform-origin: right;
        transition: transform 0.6s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .chat-button:hover::after {
        transform: scaleX(1);
        transform-origin: left;
    }

    @media (max-width: 768px) {
        .contact-section {
            padding: 1rem;
            padding-top: 10vh;
            margin-top: 0;
            min-height: 100vh;
            height: 100vh;
        }

        .contact-content {
            width: 95%;
        }

        .text {
            max-width: none;
        }

        .chat-button {
            font-size: 1.4rem;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const chatPromptBtn = document.getElementById('chat-prompt-btn');
        
        if (chatPromptBtn) {
            chatPromptBtn.addEventListener('click', () => {
                const chatbotButton = document.querySelector('.chatbot-button');
                if (chatbotButton) {
                    chatbotButton.click();
                }
            });
        }
    });
</script>
