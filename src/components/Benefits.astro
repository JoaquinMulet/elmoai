---

<section class="benefits-section" id="beneficios">
    <div class="carousel-container">
        <div class="carousel">
            {benefits.map((benefit, index) => (
                <article class="benefit-card" data-index={index}>
                    <div class="card-content">
                        <h3>{benefit.title}</h3>
                        <p>{benefit.text}</p>
                    </div>
                </article>
            ))}
        </div>
        <div class="nav-controls">
            <button class="nav-button prev" aria-label="Previous benefit">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M15 18l-6-6 6-6" />
                </svg>
            </button>
            <div class="progress-dots">
                {benefits.map((_, index) => (
                    <button class="dot" data-index={index} aria-label={`Go to benefit ${index + 1}`}></button>
                ))}
            </div>
            <button class="nav-button next" aria-label="Next benefit">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M9 18l6-6-6-6" />
                </svg>
            </button>
        </div>
    </div>
    <a href="#contact" class="contact-button">Contáctanos</a>
</section>

<style>
    .benefits-section {
        min-height: 100vh;
        background: #ffffff;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding-top: 10vh;
    }

    .carousel-container {
        width: 100%;
        max-width: 1000px;
        position: relative;
        margin: 0 auto;
    }

    .carousel {
        position: relative;
        height: 450px;
        overflow: hidden;
    }

    .benefit-card {
        position: absolute;
        width: 100%;
        height: 100%;
        background: white;
        box-shadow: none;
        opacity: 0;
        transform: translateX(100%);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

    .benefit-card.active {
        opacity: 1;
        transform: translateX(0);
    }

    .benefit-card.previous {
        transform: translateX(-100%);
        opacity: 0;
    }

    .card-content {
        padding: 4rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: left;
        width: 100%;
        box-sizing: border-box;
        overflow-wrap: break-word;
        word-wrap: break-word;
        -webkit-hyphens: auto;
        hyphens: auto;
    }

    .card-content h3 {
        color: #1a1a1a;
        font-size: 3.2rem;
        margin-bottom: 2rem;
        font-weight: 400;
        line-height: 1;
        letter-spacing: -0.02em;
        max-width: 100%;
    }

    .card-content p {
        color: #333333;
        font-size: 1.6rem;
        line-height: 1.4;
        margin: 0;
        font-weight: 400;
        letter-spacing: -0.01em;
        max-width: 100%;
        overflow-wrap: break-word;
        word-wrap: break-word;
    }

    @media (max-width: 768px) {
        .card-content {
            padding: 2rem;
        }

        .card-content h3 {
            font-size: 2.4rem;
            margin-bottom: 1.5rem;
        }

        .card-content p {
            font-size: 1.3rem;
        }
    }

    /* Ajustes específicos para iOS Safari */
    @supports (-webkit-touch-callout: none) {
        .card-content {
            padding: 2rem;
            width: auto;
            -webkit-overflow-scrolling: touch;
        }

        .card-content h3 {
            width: 100%;
            display: inline-block;
        }

        .card-content p {
            width: 100%;
            display: inline-block;
        }
    }

    .nav-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
        padding: 0 1.5rem;
    }

    .nav-button {
        background: none;
        border: 1px solid rgba(0, 0, 0, 0.1);
        width: 50px;
        height: 50px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #1a1a1a;
        transition: all 0.3s ease;
    }

    .nav-button svg {
        width: 28px;
        height: 28px;
    }

    .nav-button:hover {
        background: #1a1a1a;
        color: white;
    }

    .progress-dots {
        display: flex;
        gap: 0.5rem;
    }

    .dot {
        width: 28px;
        height: 2px;
        border: none;
        background: #1a1a1a;
        opacity: 0.2;
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 0;
    }

    .dot.active {
        opacity: 1;
        width: 40px;
    }

    .contact-button {
        font-size: 1.8rem;
        font-weight: 400;
        letter-spacing: 0.1em;
        color: #1a1a1a;
        text-decoration: none;
        display: inline-block;
        margin-top: 3rem;
        position: relative;
    }

    .contact-button::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 1px;
        bottom: -4px;
        left: 0;
        background-color: currentColor;
        transform: scaleX(0);
        transform-origin: right;
        transition: transform 0.6s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .contact-button:hover::after {
        transform: scaleX(1);
        transform-origin: left;
    }

    @media (max-width: 768px) {
        .benefits-section {
            padding: 3rem 1rem;
        }

        .carousel {
            height: 400px;
        }

        .nav-button {
            width: 45px;
            height: 45px;
        }

        .nav-button svg {
            width: 24px;
            height: 24px;
        }
    }
</style>

<script>
    let currentIndex = 0;
    const cards = document.querySelectorAll('.benefit-card');
    const dots = document.querySelectorAll('.dot');
    const totalCards = cards.length;

    function updateCards() {
        cards.forEach((card, index) => {
            card.classList.remove('active', 'previous');
            if (index === currentIndex) {
                card.classList.add('active');
            } else if (index === (currentIndex - 1 + totalCards) % totalCards) {
                card.classList.add('previous');
            }
        });

        dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === currentIndex);
        });
    }

    function nextCard() {
        currentIndex = (currentIndex + 1) % totalCards;
        updateCards();
    }

    function prevCard() {
        currentIndex = (currentIndex - 1 + totalCards) % totalCards;
        updateCards();
    }

    // Initialize first card
    cards[0].classList.add('active');
    dots[0].classList.add('active');

    // Event listeners
    document.querySelector('.next').addEventListener('click', nextCard);
    document.querySelector('.prev').addEventListener('click', prevCard);

    dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
            currentIndex = index;
            updateCards();
        });
    });

    // Touch/Swipe support
    let touchStartX = 0;
    const carousel = document.querySelector('.carousel');

    carousel.addEventListener('touchstart', e => {
        touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    carousel.addEventListener('touchend', e => {
        const touchEndX = e.changedTouches[0].screenX;
        const diff = touchStartX - touchEndX;

        if (Math.abs(diff) > 50) {
            if (diff > 0) {
                nextCard();
            } else {
                prevCard();
            }
        }
    }, { passive: true });
</script>
