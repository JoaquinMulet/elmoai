<footer class="footer">
    <div class="footer-content">
        <div class="footer-logo">
            <div class="moai-logo">
                <img src="/elmoai_logo.svg" alt="Moai Logo" />
            </div>
            <div class="text-part">
                <span class="el">El</span>
                <span class="moai-text">Moai</span>
            </div>
        </div>
        <div class="footer-info">
            <p> 2025 El Moai. Todos los derechos reservados.</p>
        </div>
    </div>
</footer>

<style>
    .footer {
        padding: 4rem 2rem;
        background: #ffffff;
        margin-top: auto;
        font-family: 'Satoshi', system-ui, sans-serif;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .footer-logo {
        display: none; /* Oculto por defecto, visible en m√≥vil */
        align-items: center;
        gap: 0.8rem;
    }

    .text-part {
        display: flex;
        flex-direction: column;
        align-items: baseline;
    }

    .el {
        font-size: 0.9rem;
        color: rgba(26, 26, 26, 0.6);
        font-weight: 400;
    }

    .moai-text {
        font-size: 1.2rem;
        color: #1a1a1a;
        font-weight: 500;
        letter-spacing: 0.02em;
    }

    .moai-logo {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .moai-logo img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transform: scaleX(-1);
    }

    .footer-info {
        font-size: 0.9rem;
        opacity: 0.7;
        font-family: 'Satoshi', system-ui, sans-serif;
    }

    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            gap: 2rem;
        }

        .footer-logo {
            display: flex;
        }
    }
</style>
