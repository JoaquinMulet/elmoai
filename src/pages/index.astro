---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Benefits from '../components/Benefits.astro';
import Contact from '../components/Contact.astro';
---

<Layout title="El Moai">
	<main class="main-content">
		<Hero />
		<Benefits />
		<Contact />
	</main>
</Layout>

<style>
	main.main-content {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	main.main-content {
		margin: 0;
		padding: 0;
		width: 100%;
		font-family: 'Satoshi', system-ui, sans-serif;
	}

	.hero-section {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		margin-top: -5vh;
	}

	.hero-content {
		max-width: 800px;
		width: 90%;
		margin: 0 auto;
		text-align: center;
	}

	.text {
		font-size: clamp(2.5rem, 4vw, 3.5rem);
		font-weight: 400;
		line-height: 1.2;
		color: #1a1a1a;
		margin: 0;
		margin-bottom: 6rem;
	}

	.button {
		font-size: 1.8rem;
		font-weight: 400;
		letter-spacing: 0.1em;
		color: #1a1a1a;
		text-decoration: none;
		padding: 0.4rem 0;
		position: relative;
	}

	.button::after {
		content: '';
		position: absolute;
		width: 100%;
		height: 1px;
		bottom: 0;
		left: 0;
		background-color: currentColor;
		transform: scaleX(0);
		transform-origin: right;
		transition: transform 0.6s cubic-bezier(0.19, 1, 0.22, 1);
	}

	.button:hover::after {
		transform: scaleX(1);
		transform-origin: left;
	}

	html {
		scroll-behavior: smooth;
	}

	@media (max-width: 768px) {
		.hero-section {
			padding: 1rem;
			margin-top: -10vh;
			min-height: 90vh;
		}

		.hero-content {
			width: 95%;
		}

		.text {
			max-width: none;
		}
	}
</style>

<script>
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener('click', function (e) {
			e.preventDefault();
			const target = document.querySelector(this.getAttribute('href'));
			target.scrollIntoView({
				behavior: 'smooth'
			});
		});
	});
</script>
